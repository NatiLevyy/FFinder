# FFinder Kotlin + Jetpack Compose Coding Style Configuration
# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[*.{kt,kts}]
# Kotlin specific settings
indent_style = space
indent_size = 4
continuation_indent_size = 8
max_line_length = 120

[*.xml]
# Android XML files
indent_style = space
indent_size = 4

[*.gradle]
# Gradle files
indent_style = space
indent_size = 4

[*.{yml,yaml}]
# YAML files
indent_style = space
indent_size = 2

[*.json]
# JSON files
indent_style = space
indent_size = 2

[*.md]
# Markdown files
trim_trailing_whitespace = false
max_line_length = off