<animated-vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">
    <aapt:attr name="android:drawable">
        <vector
            android:width="24dp"
            android:height="34dp"
            android:viewportWidth="24.0"
            android:viewportHeight="34.0"
            android:autoMirrored="true">
            <group
                android:name="pin_group"
                android:pivotX="12.0"
                android:pivotY="12.0">
                <path
                    android:name="pin_body"
                    android:pathData="M12,2 C7.58,2 4,5.58 4,10 C4,16 12,28 12,28 S20,16 20,10 C20,5.58 16.42,2 12,2 Z M12,14 C9.79,14 8,12.21 8,10 C8,7.79 9.79,6 12,6 C14.21,6 16,7.79 16,10 C16,12.21 14.21,14 12,14 Z"
                    android:fillColor="#6B4F8F"
                    android:strokeWidth="1"
                    android:strokeColor="#FFFFFF"
                    android:fillAlpha="1.0"/>
                <path
                    android:name="pin_center"
                    android:pathData="M12,8 C10.9,8 10,8.9 10,10 C10,11.1 10.9,12 12,12 C13.1,12 14,11.1 14,10 C14,8.9 13.1,8 12,8 Z"
                    android:fillColor="#FFFFFF"
                    android:fillAlpha="1.0"/>
                <path
                    android:name="pulse_ring"
                    android:pathData="M12,6 C9.79,6 8,7.79 8,10 C8,12.21 9.79,14 12,14 C14.21,14 16,12.21 16,10 C16,7.79 14.21,6 12,6 Z"
                    android:fillColor="#6B4F8F"
                    android:fillAlpha="0.3"
                    android:strokeWidth="2"
                    android:strokeColor="#6B4F8F"
                    android:strokeAlpha="0.6"/>
            </group>
        </vector>
    </aapt:attr>

    <!-- Pin scale animation -->
    <target android:name="pin_group">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="1200"
                android:propertyName="scaleX"
                android:repeatCount="infinite"
                android:repeatMode="reverse"
                android:valueFrom="1.0"
                android:valueTo="1.1"
                android:interpolator="@android:anim/accelerate_decelerate_interpolator"/>
        </aapt:attr>
    </target>

    <target android:name="pin_group">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="1200"
                android:propertyName="scaleY"
                android:repeatCount="infinite"
                android:repeatMode="reverse"
                android:valueFrom="1.0"
                android:valueTo="1.1"
                android:interpolator="@android:anim/accelerate_decelerate_interpolator"/>
        </aapt:attr>
    </target>

    <!-- Pulse ring fade animation -->
    <target android:name="pulse_ring">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="1200"
                android:propertyName="fillAlpha"
                android:repeatCount="infinite"
                android:repeatMode="reverse"
                android:valueFrom="0.0"
                android:valueTo="0.5"
                android:interpolator="@android:anim/accelerate_decelerate_interpolator"/>
        </aapt:attr>
    </target>
</animated-vector>